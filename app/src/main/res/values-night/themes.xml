<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Journal" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your dark theme here. -->
        <!--primary brand colors-->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!--secondary brand colors-->
        <item name="colorSecondary">@color/primary</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/white</item>

        <!--more styles-->
        <item name="android:textViewStyle">@style/TextColor</item>
        <item name="toolbarStyle">@style/MyToolbarStyle</item>
        <item name="android:windowBackground">@color/dark</item>
    </style>
<!--    <style name="Theme.Journal" parent="Base.Theme.Journal" />-->
    <style name="TextColor" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TopLineColor" parent="Base.Theme.Journal">
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/divider2</item>
    </style>
    <style name="MyToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:paddingEnd">8dp</item>
<!--        <item name="android:background">@color/black</item>-->
        <item name="titleTextColor">@color/primary</item>
    </style>
    <style name="MyCheckboxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <!-- Customize other attributes of the checkbox as needed -->
        <item name="android:buttonTint">@color/primary</item>
    </style>
</resources>